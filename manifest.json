{
  "name": "Vilter",
  "description": "Vinted, maar dan met alle troep eruit gefilterd.",
  "version": "0.0.0.5",
  "manifest_version": 3,
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.vinted.com/*",
        "https://*.vinted.nl/*",
        "https://*.vinted.fr/*",
        "https://*.vinted.es/*",
        "https://*.vinted.co.uk/*",
        "https://*.vinted.se/*",
        "https://*.vinted.de/*",
        "https://*.vinted.it/*",
        "https://*.vinted.be/*",
        "https://*.vinted.at/*",
        "https://*.vinted.ca/*",
        "https://*.vinted.hu/*",
        "https://*.vinted.sk/*",
        "https://*.vinted.lu/*",
        "https://*.vinted.lt/*",
        "https://*.vinted.pl/*",
        "https://*.vinted.pt/*",
        "https://*.vinted.cz/*"
      ],
      "js": [
        "src/content-scripts/remove-items.ts-loader.js"
      ]
    }
  ],
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_title": "Vilter",
    "default_icon": {
      "16": "images/p16.png",
      "32": "images/p32.png",
      "48": "images/p48.png",
      "128": "images/p128.png"
    }
  },
  "icons": {
    "16": "images/p16.png",
    "32": "images/p32.png",
    "48": "images/p48.png",
    "128": "images/p128.png"
  },
  "options_page": "src/pages/options/index.html",
  "web_accessible_resources": [
    {
      "use_dynamic_url": true,
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ]
    }
  ]
}